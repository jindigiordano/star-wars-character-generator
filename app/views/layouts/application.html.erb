<!DOCTYPE html>
<html>
  <head>
    <title>Swcg</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="white-font">Star Wars Random Character Generator</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/users">Browse Users</a>
        <a href="/characters">Browse Characters</a>
        <% if current_user %>
          <a href="/users/<%= current_user.id %>"><%= current_user.username %></a>
          <form action="/logout" method="post">
            <input type="hidden" name="_method" value="delete" />
            <input type="submit" class="sign-out-link" value="Sign Out" />
          </form>
        <% else %>
          <a href="/login">Login</a>
        <% end %>
      </nav>


    </header>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
